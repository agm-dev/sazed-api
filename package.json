{
  "name": "sazed-api",
  "version": "1.0.0",
  "description": "api for sazed app",
  "main": "index.js",
  "engines": {
    "node": ">= 10.0.0"
  },
  "scripts": {
    "start": "nodemon index.js",
    "prod": "NODE_ENV=production node index.js",
    "develop": "jest --watch src",
    "test": "jest",
    "test:coverage": "jest --coverage && cat ./coverage/lcov.info | codacy-coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "populate:fake": "node scripts/populate-database.js"
  },
  "author": "Adri√°n Gonzalo",
  "license": "GPL-3.0",
  "homepage": "https://github.com/agm-dev/sazed-api",
  "lint-staged": {
    "*.js": [
      "npm run --silent lint:fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  },
  "devDependencies": {
    "codacy-coverage": "^3.4.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^9.2.5",
    "mockingoose": "^2.13.2",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2"
  },
  "keywords": [
    "node",
    "nodejs"
  ],
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "debug": "^4.1.1",
    "dotenv-safe": "^8.1.0",
    "http-status": "^1.4.0",
    "mongoose": "^5.7.7",
    "multer": "^1.4.2",
    "noswbi": "0.6.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
